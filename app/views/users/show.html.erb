
<% if current_user %>
<div id="createBark" class="panel right">
    <h1>Create a Bark</h1>
    <p>
      <%= form_for @bark do |f| %>
        <%= f.text_area :content, class: 'barkText' %>
        <%= f.submit "Bark!" %>
      <% end %>
    </p>
  </div>
<% end %>
<div id="barks" class="panel left">
    <h1>Your Barkit Profile</h1>
    <div class="barkWrapper">
        <span class="name"><%= @user.first_name %><%= @user.last_name %></span> @<%= @user.username %>
        <p>
        <%= @user.barks.size %> Barks
        <span class="spacing"><%= @user.followers.count %> Followers</span>
        <span class="spacing"><%= @user.followeds.count %> Following</span>
        </p>
        <% if current_user && @user != current_user %>
            <% if current_user.following? @user %>
                <%= form_tag relationship_path(@relationship), method: :delete do %>
                    <%= submit_tag "Unfollow" %>
                <% end %>
            <% else %>
                <%= form_for @relationship do %>
                    <%= hidden_field_tag :followed_id, @user.id %>
                    <%= submit_tag "Follow" %>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
<div class="panel left">
    <h1>Your Barks</h1>
    <% @user.barks.each do |bark| %>
        <div class="barkWrapper">
            <span class="name"><%= @user.first_name %><%= @user.last_name %></span>
            @<%= @user.username %> 
            <span class="time"><%= time_ago_in_words(bark.created_at) %></span>
            <p> <%= bark.content %> </p>
        </div>
    <% end %>
</div>